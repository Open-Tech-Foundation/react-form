{
  "name": "@opentf/react-form",
  "version": "0.18.2",
  "description": "Build forms & manage their state in React.",
  "homepage": "https://react-form.pages.dev/",
  "keywords": [
    "react",
    "form",
    "validation",
    "input",
    "state",
    "yup",
    "zod",
    "material-ui",
    "mui",
    "chakra-ui"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint ./src/** --fix",
    "check-types": "tsc --noEmit",
    "ci": "turbo run build test lint check-types"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "git@github.com:open-tech-foundation/react-form.git",
  "author": "Thanga Ganapathy",
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@opentf/eslint-config-base": "^0.1.0",
    "@swc/core": "^1.3.46",
    "@swc/jest": "^0.2.24",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "5.0.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@opentf/react-state": "^0.13.0",
    "@opentf/utils": "^0.16.0"
  }
}
